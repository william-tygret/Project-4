<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/instaLayout"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/skillsCardView"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="6dp"
        android:paddingBottom="20dp"
        app:cardBackgroundColor="@color/socialtrans"
        app:cardElevation="3dp"
        android:layout_below="@id/eduCardView"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/instagramImageView"
        android:layout_marginTop="6dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="#FFFFFF"
        android:id="@+id/instagramTextView"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="83dp"
        android:layout_below="@+id/instagramImageView"
        android:layout_alignParentStart="true"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>