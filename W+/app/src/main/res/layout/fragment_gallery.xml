<?xml version="1.0" encoding="utf-8"?>
<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:id="@id/linearLayout">


        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/galleryThumb1"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/grandpahorse"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/galleryThumb2"
                android:clickable="true"
                android:layout_centerInParent="true"
                android:src="@drawable/pokedoodles"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/galleryThumb3"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:src="@drawable/watercolor"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout"
        android:weightSum="3"
        android:id="@id/linearLayout2">


        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/galleryThumb4"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/rhombus"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/galleryThumb5"
                    android:clickable="true"
                    android:layout_centerInParent="true"
