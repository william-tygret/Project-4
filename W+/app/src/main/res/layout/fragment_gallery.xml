        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/galleryThumb6"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/ratigan"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout2"
        android:weightSum="3"
        android:id="@+id/linearLayout3">


        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/galleryThumb7"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/moog"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/galleryThumb8"
                    android:clickable="true"
                    android:layout_centerInParent="true"
                    android:src="@drawable/fertilitygoddess"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_margin="8dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/galleryThumb9"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:src="@drawable/banditos"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/linearLayout3"
        android:weightSum="3"
        android:id="@+id/linearLayout4">


        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            app:cardBackgroundColor="@color/gallerytrans"
            android:layout_height="220dp"
