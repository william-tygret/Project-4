<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/marble"
    android:layout_height="match_parent"
    tools:context="com.williamtygret.w.MainActivity">



    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/marble"
        android:layout_below="@id/toolBar">



    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profilePic"
        android:layout_margin="8dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/willhead"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="32sp"
        android:text="William Conrad Tygret"
        android:textColor="#000000"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:id="@+id/textViewName"
        android:layout_alignTop="@+id/linearLayout2"
        android:layout_toEndOf="@+id/profilePic"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Android Developer | Digital/Fine Artist"
        android:textColor="#000000"
        android:id="@+id/textViewDesc"
        android:layout_below="@+id/textViewName"
        android:layout_alignStart="@+id/textViewName"
        android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="New York, New York"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:id="@+id/textViewNewYork"
            android:layout_below="@+id/textViewDesc"
            android:layout_alignStart="@+id/textViewName"
            android:textSize="18dp"/>

        <!--<TextView-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
            <!--android:text="Resume"-->
            <!--android:textColor="#000000"-->
            <!--android:id="@+id/textTabSelected"-->
            <!--android:layout_below="@+id/textViewDesc"-->
            <!--android:layout_alignStart="@+id/textViewName"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:layout_marginTop="15dp"-->
            <!--android:textSize="25dp"/>-->


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="14dp"
        android:layout_below="@+id/profilePic"
        android:id="@+id/linearLayout"
        android:weightSum="6">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:backgroundTint="@color/resume"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:backgroundTint="@color/contact"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
        </LinearLayout>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabSocial"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/social"
            app:elevation="4dp"
            app:borderWidth="0dp"
            android:layout_margin="12dp"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabProjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:backgroundTint="@color/projects"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:backgroundTint="@color/gallery"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabAnimation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            app:elevation="4dp"
            app:borderWidth="0dp"
            app:backgroundTint="@color/animation"
            android:layout_gravity="center_horizontal"
            android:clickable="true"/>
        </LinearLayout>
    </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="16dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/profilePic"
            android:layout_alignRight="@+id/textViewDesc"
            android:id="@+id/linearLayout2">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="47dp"
                android:paddingLeft="47dp"
                android:id="@+id/androidArm"
                android:layout_marginTop="64dp"
                android:src="@drawable/androidarm"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:id="@+id/imageViewDroid"
            android:paddingLeft="200dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:src="@drawable/androidbody"
            android:layout_marginTop="20dp"/>

    </LinearLayout>





    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fragmentSpace"
        android:clickable="true"
        android:layout_margin="8dp"
        android:layout_below="@+id/linearLayout"
        android:layout_alignStart="@+id/linearLayout">
    </android.support.v4.view.ViewPager>


    </RelativeLayout>
</RelativeLayout>